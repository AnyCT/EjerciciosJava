package Ejercicios_Practica;

import java.util.Scanner;

public class Area_Triangulo_conociendo_sus_tres_lados {

	public static void main(String[] args) {
	////calcular el area de un triangulo conociendo sus tres lados
		
		Scanner tc= new Scanner(System.in);

double ladoa;
double ladob;
double ladoc;
double semiperimetro;
double area;
double perimetro;
int numero=2;
double raiz;


System.out.println("Ingresa el lado a del triangulo");
ladoa=tc.nextInt();

System.out.println("Ingresa el lado b del triangulo");
ladob=tc.nextInt();

System.out.println("Ingresa el lado c del triangulo");
ladoc=tc.nextInt();

//Se hace el primer c√°lculo del perimetro del triangulo//
  perimetro=ladoa+ladob+ladoc;
  System.out.println("El calculo del perimetro del triangulo es :"+perimetro);


  //Se hace el segundo calculo para conocer s//
  semiperimetro=perimetro/numero;
  System.out.println("El calculo de semiperimetro del triangulo es :"+semiperimetro);


//Se hace el 3 calculo//
 area = semiperimetro*(semiperimetro-ladoa)*(semiperimetro-ladob)*(semiperimetro-ladoc);
 System.out.println("El calculo del area de un triangulo conociendo sus 3 lados  es :"+area+ " m2");
 
//calculo de la raiz cuadrada del area de un rectangulo//
 
 raiz= Math.sqrt(area);
 
 System.out.println("La raiz cuadrada del area de un triangulo conociendo sus 3 lados  es :"+raiz+" m2");
 
 
 
}


}
